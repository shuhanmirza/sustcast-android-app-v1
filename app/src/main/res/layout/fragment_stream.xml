<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/static_constraints_muse"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/static_constraints_muse"
            app:layout_constraintBottom_toTopOf="@id/muse_dynamic"
            app:layout_constraintTop_toBottomOf="@id/top_logo">

            <ImageView
                android:id="@+id/ic_visualization"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_stream"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Stream Logo" />

            <TextView
                android:id="@+id/txt_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kollektif_bold"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:text="Play the Stream"
                android:textColor="@color/Black"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_visualization" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/muse_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/static_constraints_muse">
            <Button
                android:id="@+id/button_stream"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/play_button"
                android:drawableTint="@color/grey700"
                android:fontFamily="@font/kollektif"
                android:foregroundGravity="center_horizontal"
                android:gravity="center|center_vertical"
                android:text="@string/now_playing"
                android:textAllCaps="false"
                android:textColor="@color/grey700"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_currently_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/kollektif"
                android:gravity="center_horizontal"
                android:text="@string/currently_playing"
                android:textColor="@color/grey700"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_stream" />

            <ImageView
                android:id="@+id/line_reading"
                android:layout_width="124sp"
                android:layout_height="12sp"
                android:src="@drawable/line_contributors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_currently_playing" />

            <TextView
                android:id="@+id/tv_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:fontFamily="@font/kollektif"
                android:text="@string/no_music_playing"
                android:textColor="@color/grey700"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_reading" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
